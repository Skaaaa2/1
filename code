<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>
        .square {
            width: 150px;
            height: 150px;
            background-color: rgb(255, 0, 0);
            position: absolute;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="square" id="square1" style="top: 50px; left: 50px;"></div>
    <div class="square" id="square2" style="top: 50px; left: 250px;"></div>
    <div class="square" id="square3" style="top: 50px; left: 450px;"></div>

    <script>
        const squares = document.querySelectorAll('.square');
        let activeSquare = null;
        let offsetX, offsetY;

        squares.forEach(square => {
            square.addEventListener('mousedown', (event) => {
                activeSquare = square;
                offsetX = event.clientX - square.getBoundingClientRect().left;
                offsetY = event.clientY - square.getBoundingClientRect().top;
                document.addEventListener('mousemove', onMouseMove);
                document.addEventListener('mouseup', onMouseUp);
            });
        });

        function onMouseMove(event) {
            if (!activeSquare) return;
            activeSquare.style.left = (event.clientX - offsetX) + 'px';
            activeSquare.style.top = (event.clientY - offsetY) + 'px';
        }

        function onMouseUp() {
            activeSquare = null;
            document.removeEventListener('mousemove', onMouseMove);
            document.removeEventListener('mouseup', onMouseUp);
        }
    </script>
</body>
</html>
